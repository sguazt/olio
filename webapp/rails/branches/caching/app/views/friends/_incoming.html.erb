<div id="incoming">
<% unless @incoming.empty? -%>
  <fieldset id="incoming_requests">
    <legend>Incoming friendship invitations</legend>
    <ol>
      <% @incoming.each do |i| -%>
        <li id="incoming_friend_request_<%= i.user.id %>">
          <%= link_to full_name(i.user), user_path(i.user) %>
          <%= render :partial => 'friends/approve_link', :locals => { :user => @user, :target => i.user } %>
          <%= render :partial => 'friends/reject_link', :locals => { :user => @user, :target => i.user } %>
        </li>
      <% end -%>
    </ol>
  </fieldset>
<% end -%>
</div>