require 'rake'
require 'rake/testtask'
require 'rake/rdoctask'

require 'rubygems'
require 'rake/gempackagetask'

desc 'Default: run unit tests.'
task :default => :test

desc 'Test the extended_fragment_cache plugin.'
Rake::TestTask.new(:test) do |t|
  t.libs << 'lib'
  t.pattern = 'test/**/*_test.rb'
  t.verbose = true
end

desc 'Generate documentation for the extended_fragment_cache plugin.'
Rake::RDocTask.new(:rdoc) do |rdoc|
  rdoc.rdoc_dir = 'rdoc'
  rdoc.title    = 'ExtendedFragmentCache'
  rdoc.options << '--line-numbers' << '--inline-source'
  rdoc.rdoc_files.include('README')
  rdoc.rdoc_files.include('lib/**/*.rb')
end

spec = Gem::Specification.new do |s| 
  s.name = "extended_fragment_cache"
  s.version = "0.0.1"
  s.author = "Tyler Kovacs"
  s.email = "tyler.kovacs@zvents.com"
  s.homepage = "http://blog.zvents.com/2006/11/3/rails-plugin-extended-fragment-cache"
  s.platform = Gem::Platform::RUBY
  s.summary = "Integrates memcache-client compatibility code and time-based expiry from Yan Pritzker's memcache_fragments"
  s.files = FileList["lib/**/*"].to_a
  s.require_path = "lib"
  s.autorequire = "extended_fragment_cache"
  s.test_files = FileList["{test}/**/*test.rb"].to_a
  s.has_rdoc = true
  s.extra_rdoc_files = ["README"]
  s.add_dependency("memcache-client", ">= 1.0.3")
end
 
Rake::GemPackageTask.new(spec) do |pkg| 
  pkg.need_tar = true 
end 
