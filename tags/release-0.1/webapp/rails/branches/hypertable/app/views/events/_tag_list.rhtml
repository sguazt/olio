<%= tags_for(@event) %>
<% if logged_in? -%>
  <% form_remote_tag(:url => tag_event_path(@event), :html => {:method => 'put', :id => 'event_tag_form'}) do  %>
    <input title="add tag" type="text" size="5" id="event_tag" name="tag" />
    <input type="submit" value="Add Tag" id="event_tag_commit" />
  <% end -%>
<% end -%>