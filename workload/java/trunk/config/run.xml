<?xml version="1.0" encoding="UTF-8"?>
<web20>
    <jvmConfig xmlns="http://faban.sunsource.net/ns/fabanharness">
        <javaHome>/usr/jdk/instances/jdk1.6.0_04</javaHome>
        <jvmOptions>-Xmx3000m -Xms512m -XX:+DisableExplicitGC -Xss128k</jvmOptions>
    </jvmConfig>
    
    <fa:runConfig definition="com.sun.web20.driver.JavaUIDriver" xmlns="http://faban.sunsource.net/ns/fabandriver" xmlns:fa="http://faban.sunsource.net/ns/faban" xmlns:fh="http://faban.sunsource.net/ns/fabanharness">
        <fh:description>AS - 4 CPUs, eventDetail JSTL fixes</fh:description>
        
        <fa:hostConfig>
            <fa:host>web-x4600-1</fa:host>
            <fh:enabled>true</fh:enabled>
            <fh:cpus>0</fh:cpus>
            <fh:tools>vmstat 10; mpstat 10; netsum -a -m -i 10; iostat -xn 10</fh:tools>
            <fh:userCommands/>
        </fa:hostConfig>
        
        <fa:scale>500</fa:scale>
        
        <fa:runControl>
            <fa:rampUp>300</fa:rampUp>
            <fa:steadyState>1200</fa:steadyState>
            <fa:rampDown>60</fa:rampDown>
        </fa:runControl>
        
        <outputDir>/apps/faban/output</outputDir>
        
        <audit>false</audit>
        <threadStart>
            <delay>300</delay>
            <simultaneous>false</simultaneous>
            <parallel>true</parallel>
        </threadStart>

        <stats>
            <maxRunTime>6</maxRunTime>
            <interval>10</interval>
        </stats>
        
        <runtimeStats enabled="false">
            <interval>5</interval>
        </runtimeStats>
        
        
        <driverConfig name="JavaUIDriver">
            <agents>1</agents>
            <stats>
                <interval>10</interval>
            </stats>
            <runtimeStats target="9988"/>
            <properties>
                <property name="serverType">jsp</property>
            </properties>
            <properties>
                <property name="useJmakiComponents">false</property>
            </properties>
        </driverConfig>
    </fa:runConfig>
    
    <coolstackHome>/opt/coolstack</coolstackHome>
    
    <webServer>
        <fa:hostConfig xmlns="http://faban.sunsource.net/ns/fabanharness" xmlns:fa="http://faban.sunsource.net/ns/faban">
            <fa:hostPorts>jes-x4600-1:8080</fa:hostPorts>
            <enabled>true</enabled>
            <cpus>0</cpus>
            <tools>vmstat 10; mpstat 10; netsum -a -m -i 10; iostat -xn 10</tools>           
            <userCommands/>            
        </fa:hostConfig>
        <type>glassfish</type>
        <hostBinPath>/disk_array/web20perf/java/glassfishv2_u2/glassfish/bin</hostBinPath>
        <hostLogPath>/disk_array/web20perf/java/glassfishv2_u2/glassfish/domains/domain1/logs</hostLogPath>
        <hostConfPath>/disk_array/web20perf/java/glassfishv2_u2/glassfish/domains/domain1/config</hostConfPath>
        <phpIniPath>/opt/coolstack/php5/lib</phpIniPath>
        <manualStart>false</manualStart>
    </webServer>
    <dbServer>
        <fa:hostConfig xmlns="http://faban.sunsource.net/ns/fabanharness" xmlns:fa="http://faban.sunsource.net/ns/faban">
            <fa:host>web-x4100-6</fa:host>
            <enabled>true</enabled>
            <cpus>0</cpus>
            <tools>vmstat 10; mpstat 10; netsum -a -m -i 10; iostat -xn 10</tools> 
            <userCommands/>
        </fa:hostConfig>
        <dbDriver>com.mysql.jdbc.Driver</dbDriver>
        
        <connectURL>jdbc:mysql://web-x4100-6/bpwebapp?user=web20&amp;password=web20&amp;relaxAutoCommit=true&amp;sessionVariables=FOREIGN_KEY_CHECKS=0</connectURL>
        <autoCommit>false</autoCommit>
        <reloadDB>true</reloadDB>
        <scale>500</scale>               
        <dbHomePath>/opt/coolstack/mysql</dbHomePath>
        <dbConfPath>/etc</dbConfPath>
    </dbServer>
    <dataStorage>
        <fa:hostConfig xmlns="http://faban.sunsource.net/ns/fabanharness" xmlns:fa="http://faban.sunsource.net/ns/faban">
            <fa:host>jes-x4600-1</fa:host>
            <enabled>true</enabled>
            <cpus>0</cpus>
            <tools>NONE</tools>
            <userCommands/>
        </fa:hostConfig>
        <reloadMedia>true</reloadMedia> 
        <mediaDir>/disk_array/web20perf/java/glassfishv2_u2/glassfish/domains/domain1/lib/webapp_lib/artifacts</mediaDir>
    </dataStorage>
    <cacheServers>
        <fa:hostConfig xmlns="http://faban.sunsource.net/ns/fabanharness" xmlns:fa="http://faban.sunsource.net/ns/faban">
            <fa:hostPorts>web-x4600-1:11211</fa:hostPorts>
            <enabled>true</enabled>
            <cpus>0</cpus>
            <tools>mcstat web-x4600-1:11211 -i 10</tools>
            <userCommands/>
        </fa:hostConfig>
        <cacheBinPath>/opt/coolstack/bin</cacheBinPath>
    </cacheServers>
    
</web20>
